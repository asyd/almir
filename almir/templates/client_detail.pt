<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: base.pt">
    <tal:block metal:fill-slot="main-content-title">
      <h1>Client <small>${ object.name }</small></h1>
    </tal:block>
    <tal:block metal:fill-slot="main-content">
        <h2>Jobs</h2>
        <table class="bordered-table">
         <thead>
          <tr>
            <th>Name</th>
          </tr>
         </thead>
         <tbody>
           <tr tal:repeat="job jobs"
               tal:attributes="class ' clickable-row'; data-link request.route_url('job_detail', id=job.jobid)">
           <td>${ job.name }</td>
          </tr>
         </tbody>
        </table>
    </tal:block>

    <tal:block metal:fill-slot="main-sidebar-title">
      <h1>Details</h1>
    </tal:block>
    <tal:block metal:fill-slot="main-sidebar">
        <table class="bordered-table zebra-striped word-wrapped">
         <tbody>
           <tr>
               <td>Platform:</td>
               <td>${ object.uname }</td>
           </tr>
           <tr>
               <td>Total size of backups:</td>
               <td>${ format_byte_size(float(total_size_backups)) }</td>
           </tr>
           <tr>
               <td>Last successful backup:</td>
               <td><a tal:condition="last_successful_job" href="${ request.route_url('job_detail', id=last_successful_job.jobid) }">${ time_ago_in_words(last_successful_job.schedtime) }</a></td>
           </tr>
           <tr>
               <td>File retention:</td>
               <td>${ distance_of_time_in_words(int(object.fileretention)) }</td>
           </tr>
           <tr>
               <td>Job retention:</td>
               <td>${ distance_of_time_in_words(int(object.jobretention)) }</td>
           </tr>
           <tr>
               <td>AutoPrune:</td>
               <td>${ bool(object.autoprune) and 'Yes' or 'No' }</td>
           </tr>
         </tbody>
        </table>
    </tal:block>
</html>
