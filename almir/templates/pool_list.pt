<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: base.pt">
    <tal:block metal:fill-slot="main-content-title">
      <h1>Pools <small>List</small></h1>
    </tal:block>
    <tal:block metal:fill-slot="main-content">
        <table class="bordered-table">
         <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Num of volumes</th>
          </tr>
         </thead>
         <tbody>
           <tr
               tal:repeat="pool objects"
               tal:attributes="class 'clickable-row'; data-link request.route_url('pool_detail', id=pool.poolid)">
           <td>${ pool.name }</td>
           <td>${ pool.pooltype }</td>
           <td>${ pool.numvols }</td>
          </tr>
         </tbody>
        </table>
    </tal:block>
    <tal:block metal:fill-slot="main-sidebar-title">
      <h1>Filter</h1>
    </tal:block>
    <tal:block metal:fill-slot="main-sidebar">
      ${ structure: form.render() }
    </tal:block>
</html>
