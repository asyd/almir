<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: base.pt">
    <tal:block metal:fill-slot="main-content-title">
      <h1 class="view">Log <small>view</small></h1>
    </tal:block>
    <tal:block metal:fill-slot="main-content">
        <table class="table table-striped table-bordered datatables">
         <thead>
          <tr>
            <th>Job</th>
            <th>Time</th>
            <th>Message</th>
          </tr>
         </thead>
         <tbody>
          <tr class="clickable-row" tal:repeat="log logs" tal:attributes="data-link request.route_url('job_detail', id=log.jobid)">
           <td>${ log.jobid }</td>
           <td>${ log.time }</td>
           <td>${ structure: nl2br(escape_html(log.logtext)) }</td>
          </tr>
         </tbody>
        </table>
    </tal:block>
    <tal:block metal:fill-slot="main-sidebar-title">
      <h1 class="view">Filter</h1>
    </tal:block>
    <tal:block metal:fill-slot="main-sidebar">
      ${ structure: form }
    </tal:block>
</html>
