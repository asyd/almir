{% extends "templates/base.jinja2" %}

{% block content %}
    <h1 class="view">Dashboard <small>Overview</small></h1>
    <h2>Running Jobs</h2>
    {{ macros.jobs_table(request, running_jobs) }}
    <h2>Latests finished Jobs</h2>
    {{ macros.jobs_table(request, jobs) }}
{% endblock %}

{% block sidebar %}
      <h1 class="view">Statistics</h1>
        <table class="table table-striped table-bordered table-condensed word-wrapped">
         <tbody>
           <tr>
               <td>Clients:</td>
               <td>{{ num_clients }}</td>
           </tr>
           <tr>
               <td>Jobs:</td>
               <td>{{ num_jobs }}</td>
           </tr>
           <tr>
               <td>Volumes:</td>
               <td>{{ num_media }}</td>
           </tr>
           <tr>
               <td>Total backup size:</td>
               <td>{{ sum_volumes }}</td>
           </tr>
           <!-- total bytes, database size, number of files, df -h -->
         </tbody>
        </table>
{% endblock %}
