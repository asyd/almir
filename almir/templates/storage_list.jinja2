{% extends "templates/base.jinja2" %}

{% block content %}
    <h1 class="view">Storage <small>list</small></h1>
    <h2>By name</h2>
    <table class="table table-striped table-bordered datatables">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for storage in objects %}
                <tr class="clickable-row" data-link="{{ request.route_url('storage_detail', id=storage.storageid) }}">
                    <td>{{ macros.link(storage.render_name(request)) }}</td>
                    <!-- TODO: add total backup size, clients, jobs, num volumes, etc... -->
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <h1 class="view">Filter</h1>
    {{ form.render()|safe }}
{% endblock %}
