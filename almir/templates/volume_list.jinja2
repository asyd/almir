{% extends "templates/base.jinja2" %}

{% block content %}
    <h1 class="view">Volumes <small>list</small></h1>
    <table class="table table-striped table-bordered datatables">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size</th>
                <th>Last written</th>
                <th>Storage</th>
                <th>Pool</th>
            </tr>
        </thead>
        <tbody>
            {% for media in objects %}
                <tr class="clickable-row" data-link="{{ request.route_url('volume_detail', id=media.mediaid) }}">
                    <td>{{ macros.link(media.render_volumename(request)) }}</td>
                    <td>{{ macros.link(media.render_volbytes(request)) }}</td>
                    <td>{{ media.lastwritten }}</td>
                    <td>{{ macros.link(media.render_storage_name(request)) }}</td>
                    <td>{{ macros.link(media.render_pool_name(request)) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <h1 class="view">Filter</h1>
    {{  form.render()|safe }}
{% endblock %}
